<div class="container mt-3 text-left">
  <div class="row">
      <div class="col-6 col-md-4 border border-secondary rounded p-3" style="margin-left: 30%;">
          <h3>Registrarse </h3><br>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group">
              <%= f.label "Correo UC"%><br>
              <%= f.email_field :email, class: "form-control", type: "email", autofocus: true, autocomplete: "email" %>
          </div>

          <div class="form-group">
            <%= f.label "Nombre"%><br>
            <%= f.text_field :name, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label "Número de Estudiante"%><br>
            <%= f.number_field :student_number, class: "form-control"%>
          </div>
          <div class="form-group">
              <%= f.label "Contraseña"%><br>
              <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
          </div>
          <div class="form-group">
            <%= f.label "Confirmar Contraseña"%><br>
            <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
          </div>
          <%= f.submit "Entrar", class: "btn btn-primary " %>
          <%end%>

      </div>
  </div>
</div>