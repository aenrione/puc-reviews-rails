<div class="container mt-3 text-left">
  <div class="row">
    <div class="col-6 col-md-4 border border-secondary rounded p-3" style="margin-left: 30%;">
      <h2 class="mb-4">Iniciar Sesión </h2>
      <%= form_for(resource, url: session_path(resource)) do |f| %>
      <div class="form-group">
          <%= f.label "Email"%><br>
          <%= f.text_field :email, class: "form-control", type: "email" %>
      </div>
      <div class="form-group">
          <%= f.label "Contraseña"%><br>
          <%= f.text_field :password, class: "form-control", type: "password", autocompletion: "off" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <%= f.submit "Entrar", class: "btn btn-primary " %>
      <p class="mt-3"><small><a href="#Reset password link"> Olvidaste tu contraseña?</a></small></p>
      <%end%>
    </div>
  </div>
</div>