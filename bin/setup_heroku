#!/bin/sh

# Setup heroku application remotes
if heroku auth:whoami &> /dev/null; then
  if heroku apps:info --app pl-puc-yelp-staging &> /dev/null; then
    git remote add staging git@heroku.com:pl-puc-yelp-staging.git || true
    git config heroku.remote staging
    echo 'You are a collaborator on the "pl-puc-yelp-staging" Heroku app'
  else
    echo 'Ask for access to the "pl-puc-yelp-staging" Heroku app'
  fi

  if heroku apps:info --app pl-puc-yelp-production &> /dev/null; then
    git remote add production git@heroku.com:pl-puc-yelp-production.git || true
    echo 'You are a collaborator on the "pl-puc-yelp-production" Heroku app'
  else
    echo 'Ask for access to the "pl-puc-yelp-production" Heroku app'
  fi
else
  echo 'You need to login to heroku. Run "heroku login"'
fi
